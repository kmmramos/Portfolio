<!-- /**
 * Implemented a reusable navigation section at the header
 * of the website where EJS include is also used for
 * the navigation links and dynamic content.
 */ -->

<header class="header" data-header>
  <div class="container">

    <a href="#" class="logo">
      <img src="./img/logo ver5.svg" width="151" height="28" alt="Kirstin logo placeholder">
    </a>

    <nav class="navbar" data-navbar>
      <ul class="navbar-list">

        <li class="navbar-item">
          <a href="<%= currentRoute === 'index' ? '#' : './' %>" class="label-lg navbar-link has-after <%= currentRoute === 'index' ? 'active' : '' %>">Home</a>
        </li>

        <li class="navbar-item">
          <a href="<%= currentRoute === 'about' ? '#' : './about' %>" class="label-lg navbar-link has-after <%= currentRoute === 'about' ? 'active' : '' %>">About</a>
        </li>

        <li class="navbar-item">
          <a href="<%= currentRoute === 'services' ? '#' : './services' %>" class="label-lg navbar-link has-after <%= currentRoute === 'services' ? 'active' : '' %>">Services</a>
        </li>

        <li class="navbar-item">
          <a href="<%= currentRoute === 'projects' ? '#' : './projects' %>" class="label-lg navbar-link has-after <%= currentRoute === 'projects' ? 'active' : '' %>">Projects</a>
        </li>

        <li class="navbar-item">
          <a href="<%= currentRoute === 'contact' ? '#' : './contact' %>" class="label-lg navbar-link has-after <%= currentRoute === 'contact' ? 'active' : '' %>"">Contact</a>
        </li>
      </ul>
    </nav>

    <a href="./contact" class="btn btn-primary">Contact Now</a>

    <button class="nav-toggle-btn" aria-label="menu" data-nav-toggler>
      <ion-icon name="menu-outline" aria-hidden="true"></ion-icon>
    </button>

  </div>
</header> 